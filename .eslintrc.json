{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "settings": {
    "mdx/code-blocks": false,
    "mdx/language-mapper": {},
    "react": {
      "version": "detect"
    },
    "prettierx": {
      "usePrettierrc": true,
      "editorconfig": false,
      "ignorePath": ".prettierignore",
      "proseWrap": "never",
      "pluginSearchDirs": [],
      "plugins": [],
      "withNodeModules": false,
      "useCache": true
    },
    "import/resolver": {
      "babel-module": {}
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:mdx/recommended",
    "plugin:prettierx/default",
    "next/core-web-vitals"
  ],
  "plugins": ["module-resolver", "import", "react", "mdx", "prettierx"],
  "rules": {
    "mdx/no-jsx-html-comments": "warn",
    "no-unused-expressions": "off",
    "mdx/no-unused-expressions": "warn",
    "mdx/remark": "warn",
    "module-resolver/use-alias": 2,
    "no-var": "error",
    "no-unused-vars": "warn",
    "react/react-in-jsx-scope": "off",
    "react/no-unescaped-entities": "off",
    "react/prop-types": "off",
    "no-multiple-empty-lines": ["off", { "max": 8, "maxEOF": 2 }],
    "prettierx/options": [
      "warn",
      {
        "arrayBracketSpacing": true,
        "breakBeforeElse": true,
        "semi": true,
        "printWidth": 100,
        "offsetTernaryExpressions": false,
        "singleQuote": true,
        "breakLongMethodChains": true
      }
    ]
  }
}
